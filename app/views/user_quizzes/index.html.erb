<p id="notice"><%= notice %></p>
<h1>Mis resultados</h1>
<div class="row">
<%= pie_chart @user_quizzes.group(:score).count, id: "users-chart", width: "500px", height: "400px" %>
<div class="col-6" >
<table id="dataTablestb" class="display nowrap dataTable dtr-inline collapsed">
  <thead>
    <tr>
      <th>Exámen</th>
      <th>Calificación</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_quizzes.each do |user_quiz| %>
      <tr>
        <td><%= link_to user_quiz.quiz_id, quiz_path(user_quiz.quiz_id)%></td>
        <td><%= user_quiz.score %></td>
        <td><%= link_to 'Mas información', user_quiz %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

