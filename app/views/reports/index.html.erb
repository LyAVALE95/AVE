</center>
</div>
<script>
var app = angular.module('reportApp', []);
app.controller('reportCtrl', function($scope, $http) {
	$scope.myData=[];
    $scope.reports = [
        {model : "Estudiantes", tipo : "students"},
        {model : "Clases", tipo : "groups"},
        {model : "Calificaciones", tipo : "score"}
    ];
    $scope.typeStudent = [
        {model : "Por grupo", tipo : "bygroup"},
        {model : "Order alfabético", tipo : "byalph"},
        {model : "Por promedio", tipo : "byscore"}
    ];
    $http.get("/groups.json").then(function (response) {
      $scope.myGroups = response.data;
  	});
});
$(document).ready(function(){
	$("#toGrp").click(function(){
		var myOption = $("#myOption").val();
		alert(myOption);
	});
});
</script>