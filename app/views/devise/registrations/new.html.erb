<body class="fixed-background-body" style="background-image: url('/backgrounds/photo-1463936575829-25148e1db1b8.jpg");'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="card cardround-g" style="margin-left: 110px; margin-top: 60px;">
    <div class="card-content">
      <h4>Registro</h4>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab"><a class="active" href="#test4">Información básica</a></li>
        <li class="tab"><a href="#test5">Datos personales</a></li>
        <li class="tab"><a href="#test6">Información institucional</a></li>
      </ul>
    </div>
    <div class="card-content grey lighten-4">
      <div id="test4">
        <div class="field">
           <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        </div>
      <div id="test5">
        <div class="field">
           <%= f.label :name %><br />
           <%= f.text_field :name, autofocus: true %>
          </div>
        
          <div class="field">
            <%= f.label :lastnames %>
            <%= f.text_field :lastnames, autocomplete: "off" %>
          </div>
        
          <div class="field">
            <%= f.label :control_number %><br />
            <%= f.text_field :control_number %>
          </div>
      </div>
      <div id="test6">    
              <div class="field">
           <%= f.label :carrer %><br />
           <%= f.text_field :carrer, autofocus: true %>
          </div>
        
          <div class="field">
            <%= f.label :grade %>
            <%= f.text_field :grade, autocomplete: "off" %>
          </div>
        
          <div class="field">
            <%= f.label :rol %><br />
          <%= f.select :rol, options_for_select([["Teacher", "t"], ["Student", "s"]]) %>          </div>
      </div>
        <div class="actions">
    <center><%= f.submit "Sign up", class: 'btn-danger' %></center>
  </div></div>
    </div>
  </div>
<% end %>
</body>



  
  
